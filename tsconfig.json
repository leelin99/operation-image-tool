{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "lib": ["ESNext", "DOM"],
    "typeRoots": [
      "./types",
      "./node_modules/types"
    ],
    "paths": {
      "@/*":["./src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "type/VueGlobal.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
